@model Cinema

@{
    ViewData["Title"] = @Model.Name;
}

<div class="row text">
    <div calss="col-md-10 offset-2">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                    <div class="form-group text-center" style="margin: 10px 0 10px 0">
                    <img class="rounded-circle" id="LogoPreview" />
                    </div>
                    <div class="form-group" style="margin: 10px 0 10px 0">
                        <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin: 10px 0 10px 0">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin: 10px 0 10px 0">
                        <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin: 10px 0 10px 0">
                        <a class="btn btn-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit </a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })

    </script>
}
